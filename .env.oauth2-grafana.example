# Copy to .env.oauth2-grafana and fill in from Authentik app
OAUTH2_PROXY_PROVIDER=oidc
OAUTH2_PROXY_CLIENT_ID=
OAUTH2_PROXY_CLIENT_SECRET=
# 32-byte base64 cookie secret. Example command:
# node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
OAUTH2_PROXY_COOKIE_SECRET=please-generate-32-bytes-base64
OAUTH2_PROXY_OIDC_ISSUER_URL=http://authentik-server:9000/application/o/your-app-id/
OAUTH2_PROXY_EMAIL_DOMAINS=*
OAUTH2_PROXY_REDIRECT_URL=http://localhost:43180/oauth2/callback
# Recommended for Grafana auth proxy
OAUTH2_PROXY_PASS_USER_HEADERS=true
OAUTH2_PROXY_SET_XAUTHREQUEST=true
OAUTH2_PROXY_PASS_AUTHORIZATION_HEADER=true
OAUTH2_PROXY_SET_AUTHORIZATION_HEADER=true
# Allowed users (optional strict)
# OAUTH2_PROXY_ALLOWED_EMAILS=user@example.com
