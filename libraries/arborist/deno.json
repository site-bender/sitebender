{
	"name": "@sitebender/arborist",
	"version": "0.1.0",
	"imports": {
		"deno_ast": "https://deno.land/x/deno_ast@0.50.3/mod.ts"
	},
	"exports": {
		"./parseFile": "./src/api/parseFile/index.ts",
		"./parseFileWithSemantics": "./src/api/parseFileWithSemantics/index.ts",
		"./parseFileWithSwc": "./src/api/parseFileWithSwc/index.ts",
		"./buildParsedFile": "./src/api/buildParsedFile/index.ts",
		"./buildSemanticFile": "./src/api/buildSemanticFile/index.ts",
		"./extractFunctions": "./src/extractors/extractFunctions/index.ts",
		"./extractComments": "./src/extractors/extractComments/index.ts",
		"./extractImports": "./src/extractors/extractImports/index.ts",
		"./extractExports": "./src/extractors/extractExports/index.ts",
		"./extractTypes": "./src/extractors/extractTypes/index.ts",
		"./extractConstants": "./src/extractors/extractConstants/index.ts",
		"./detectViolations": "./src/extractors/detectViolations/index.ts",
		"./types": "./src/types/index.ts"
	},
	"tasks": {
		"test": "deno test --allow-read src/",
		"test:cov": "deno test --allow-read --coverage=coverage src/ && deno coverage coverage",
		"lint": "deno lint src/",
		"typecheck": "deno check src/types/index.ts src/types/index.test.ts src/parseFile/index.ts src/parseFile/index.test.ts src/parseFile/test-fixtures/valid.ts src/buildParsedFile/index.ts src/buildParsedFile/index.test.ts",
		"fmt": "deno fmt src/",
		"demo": "deno run --allow-read demo/index.ts",
		"build:wasm": "deno run --allow-run --allow-read src/parsers/denoAst/wasm/build.ts",
		"build:wasm:prod": "deno run --allow-run --allow-read src/parsers/denoAst/wasm/build.ts prod",
		"clean:wasm": "deno run --allow-run --allow-read src/parsers/denoAst/wasm/build.ts clean"
	},
	"lint": {
		"rules": {
			"tags": ["recommended"]
		},
		"exclude": [
			"src/parseFile/test-fixtures/invalid-syntax.ts"
		]
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 2,
		"semiColons": false,
		"singleQuote": false,
		"proseWrap": "preserve",
		"exclude": [
			"src/parseFile/test-fixtures/invalid-syntax.ts"
		]
	}
}
