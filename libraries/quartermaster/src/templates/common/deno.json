{
	"name": "{{APP_NAME}}",
	"version": "0.1.0",
	"exports": "./mod.ts",
	"tasks": {
		"dev": "deno run --allow-net --allow-read --allow-env server/index.ts",
		"dev:docker": "cd .sitebender && docker-compose up",
		"build": "echo 'Build task not yet implemented'",
		"test": "deno test --allow-all",
		"fmt": "deno fmt",
		"lint": "deno lint"
	},
	"imports": {
		"@std/": "https://deno.land/std@0.220.0/"
	},
	"compilerOptions": {
		"lib": ["deno.window", "dom", "dom.iterable"],
		"jsx": "react-jsx",
		"jsxImportSource": "@sitebender/pagewright"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 2,
		"singleQuote": false,
		"proseWrap": "preserve"
	},
	"lint": {
		"rules": {
			"tags": ["recommended"]
		}
	}
}
