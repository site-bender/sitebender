{
	"tasks": {
		"test": "deno test --allow-read --allow-write tests/",
		"test:unit": "deno test --allow-read --allow-write tests/unit/",
		"test:integration": "deno test --allow-read --allow-write --allow-net tests/integration/",
		"test:e2e": "deno test --allow-read --allow-write --allow-net --allow-run tests/e2e/",
		"test:coverage": "deno test --allow-read --allow-write --coverage=coverage tests/",
		"coverage": "deno coverage coverage/",
		"fmt": "deno fmt",
		"lint": "deno lint",
		"typecheck": "deno check libraries/distributed/src/**/*.ts"
	},
	"imports": {
		"@sitebender/distributed": "./libraries/distributed/src/index.ts"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 4,
		"semiColons": false,
		"singleQuote": false,
		"proseWrap": "preserve"
	},
	"lint": {
		"rules": {
			"tags": ["recommended"],
			"exclude": ["no-explicit-any"]
		}
	}
}
